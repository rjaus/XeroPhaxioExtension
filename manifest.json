{
  "name": "Xero Phaxio",
  "version": "1.0",
  "description": "Fax Xero invoice with Phaxio",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "xero.png",
